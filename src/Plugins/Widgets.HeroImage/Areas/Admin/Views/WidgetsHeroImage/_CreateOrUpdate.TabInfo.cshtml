@model HeroImageModel
<script>
        $(document).ready(function () {
            $("#@Html.IdFor(model => model.HeroImageTypeId)").change(toggleHeroImageType);
            toggleHeroImageType();
        });
        function toggleHeroImageType() {
            var HeroImageTypeId = $("#@Html.IdFor(model => model.HeroImageTypeId)").val();
            if (HeroImageTypeId == @(((int)HeroImageType.HomePage).ToString())) {
                $('#pnlCategory').hide();
                $('#pnlCollection').hide();
                $('#pnlBrand').hide();
            } else if (HeroImageTypeId == @(((int)HeroImageType.Category).ToString())) {
                $('#pnlCategory').show();
                $('#pnlCollection').hide();
                $('#pnlBrand').hide();
            }else if (HeroImageTypeId == @(((int)HeroImageType.Collection).ToString())) {
                $('#pnlCategory').hide();
                $('#pnlCollection').show();
                $('#pnlBrand').hide();
            }
            else if (HeroImageTypeId == @(((int)HeroImageType.Brand).ToString())) {
                $('#pnlCategory').hide();
                $('#pnlCollection').hide();
                $('#pnlBrand').show();
            }
        }
</script>
